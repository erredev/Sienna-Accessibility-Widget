{
    "compilerOptions": {
      "outDir": "./dist/",
      "module": "umd",
      "target": "es5",
      "lib": ["es2015", "dom"],
      "allowJs": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "declaration": true,
      "esModuleInterop": true,
      "types": [
        "./svg.d.ts",
        "./css.d.ts"
      ],
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": [
      "./src/**/*.ts"
    ]
}
